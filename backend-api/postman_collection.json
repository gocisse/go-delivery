{
  "info": {
    "name": "GOExpress-BF API",
    "description": "Complete API collection for GOExpress-BF delivery management system",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/../health",
          "host": ["{{base_url}}"],
          "path": ["..", "health"]
        }
      }
    },
    {
      "name": "Tracking",
      "item": [
        {
          "name": "Get Package Tracking",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tracking/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["tracking", "{{order_id}}"]
            }
          }
        },
        {
          "name": "Update Driver Location",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_id\": \"{{order_id}}\",\n  \"latitude\": 40.7128,\n  \"longitude\": -74.0060\n}"
            },
            "url": {
              "raw": "{{base_url}}/tracking/update",
              "host": ["{{base_url}}"],
              "path": ["tracking", "update"]
            }
          }
        },
        {
          "name": "Batch Location Update",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"updates\": [\n    {\n      \"order_id\": \"{{order_id}}\",\n      \"latitude\": 40.7128,\n      \"longitude\": -74.0060,\n      \"timestamp\": \"2024-01-01T12:00:00Z\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/tracking/batch-update",
              "host": ["{{base_url}}"],
              "path": ["tracking", "batch-update"]
            }
          }
        }
      ]
    },
    {
      "name": "Drivers",
      "item": [
        {
          "name": "Create Driver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+1234567890\",\n  \"vehicle_type\": \"motorcycle\",\n  \"license_number\": \"DL123456789\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/drivers",
              "host": ["{{base_url}}"],
              "path": ["drivers"]
            }
          }
        },
        {
          "name": "Get Driver Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/drivers/{{driver_id}}",
              "host": ["{{base_url}}"],
              "path": ["drivers", "{{driver_id}}"]
            }
          }
        },
        {
          "name": "Update Driver Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/drivers/{{driver_id}}",
              "host": ["{{base_url}}"],
              "path": ["drivers", "{{driver_id}}"]
            }
          }
        },
        {
          "name": "Get Available Drivers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/drivers/available?vehicle_type=motorcycle",
              "host": ["{{base_url}}"],
              "path": ["drivers", "available"],
              "query": [
                {
                  "key": "vehicle_type",
                  "value": "motorcycle"
                }
              ]
            }
          }
        },
        {
          "name": "List All Drivers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/drivers?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["drivers"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
